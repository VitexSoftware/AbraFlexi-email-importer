{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "schemaVersion": "3.0.0",
    "uuid": "3375c1cf-a2a1-407c-a0a0-f407893c39de",
    "name": {
        "en": "IDOC File Importer",
        "cs": "Importér ISDOC souborů"
    },
    "description": {
        "en": "Import ISDOC file to AbraFlexi",
        "cs": "Importuj ISDOC soubor do AbraFlexi"
    },
    "tags": [
        "File",
        "Importer",
        "Isdoc"
    ],
    "homepage": "https://github.com/VitexSoftware/AbraFlexi-email-importer",
    "image": "",
    "ociimage": "docker.io/vitexsoftware/abraflexi-file-importer",
    "executable": "isdoc2abraflexi",
    "environment": {
        "ISDOC_FILE": {
            "type": "file-path",
            "description": {
                "en": "ISDOC File path to import",
                "cs": "Cesta k souboru ISDOC k importu"
            },
            "hint": {
                "en": "Invoice_250800021.isdocx",
                "cs": "Faktura_250800021.isdocx"
            },
            "required": true,
            "category": "Other"
        },
        "ABRAFLEXI_COMPANY": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Company",
                "cs": "AbraFlexi Společnost"
            },
            "defval": "demo_de",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_LOGIN": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Login",
                "cs": "AbraFlexi Login"
            },
            "defval": "winstrom",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_PASSWORD": {
            "type": "password",
            "description": {
                "en": "AbraFlexi password",
                "cs": "AbraFlexi heslo"
            },
            "defval": "winstrom",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_URL": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Server URI",
                "cs": "AbraFlexi Server URI"
            },
            "defval": "https://demo.flexibee.eu:5434",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_STORAGE": {
            "type": "text",
            "description": {
                "en": "Default storage for new items",
                "cs": "Výchozí sklad pro nové položky"
            },
            "defval": "SKLAD",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_DOCTYPE": {
            "type": "string",
            "description": {
                "en": "code of the type of invoices received",
                "cs": "kód typu přijatých faktur"
            },
            "defval": "FAKTURA",
            "required": true,
            "category": "API"
        },
        "RESULT_FILE": {
            "type": "file-path",
            "description": {
                "en": "File with result of import",
                "cs": "Soubor s výsledkem importu"
            },
            "defval": "result.txt",
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "Logging target: syslog|console",
                "cs": "Cíl logování: syslog|console"
            },
            "defval": "syslog|console",
            "required": false,
            "category": "Behavior"
        }
    }
}
