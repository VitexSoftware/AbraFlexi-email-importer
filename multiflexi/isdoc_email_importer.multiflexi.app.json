{
    "$schema": "https://raw.githubusercontent.com/VitexSoftware/php-vitexsoftware-multiflexi-core/refs/heads/main/multiflexi.app.schema.json",
    "schemaVersion": "3.1.0",
    "uuid": "0323bde6-a24c-4faf-90ff-45dd88c15603",
    "name": {
        "en": "Email Importer to FlexiBee",
        "cs": "Importér emailů do FlexiBee"
    },
    "description": {
        "en": "Imports documents from mailbox to FlexiBee",
        "cs": "Načítá doklady z mailboxu do FlexiBee"
    },
    "tags": [
        "Email",
        "Importer",
        "Isdoc"
    ],
    "homepage": "https://github.com/VitexSoftware/AbraFlexi-email-importer",
    "image": "",
    "ociimage": "docker.io/vitexsoftware/abraflexi-email-importer",
    "executable": "/usr/bin/imap2abraflexi",
    "environment": {
        "ABRAFLEXI_COMPANY": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Company",
                "cs": "AbraFlexi Společnost"
            },
            "defval": "demo_de",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_LOGIN": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Login",
                "cs": "AbraFlexi Login"
            },
            "defval": "winstrom",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_PASSWORD": {
            "type": "password",
            "description": {
                "en": "AbraFlexi password",
                "cs": "AbraFlexi heslo"
            },
            "defval": "winstrom",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_URL": {
            "type": "string",
            "description": {
                "en": "AbraFlexi Server URI",
                "cs": "AbraFlexi Server URI"
            },
            "defval": "https://demo.flexibee.eu:5434",
            "required": false,
            "category": "API"
        },
        "IMAP_LOGIN": {
            "type": "text",
            "description": {
                "en": "IMAP Login",
                "cs": "IMAP Login"
            },
            "defval": "",
            "required": false,
            "category": "Other"
        },
        "IMAP_MAILBOX": {
            "type": "text",
            "description": {
                "en": "IMAP Mailbox",
                "cs": "IMAP Mailbox"
            },
            "defval": "INBOX",
            "required": false,
            "category": "Other"
        },
        "IMAP_OPTIONS": {
            "type": "text",
            "description": {
                "en": "IMAP Options",
                "cs": "IMAP Options"
            },
            "defval": "imap/ssl",
            "required": false,
            "category": "Other"
        },
        "IMAP_PASSWORD": {
            "type": "password",
            "description": {
                "en": "IMAP Password",
                "cs": "IMAP Heslo"
            },
            "defval": "",
            "required": true,
            "category": "Security"
        },
        "IMAP_PORT": {
            "type": "integer",
            "description": {
                "en": "IMAP Port",
                "cs": "IMAP Port"
            },
            "defval": "993",
            "required": true,
            "category": "Other"
        },
        "IMAP_SERVER": {
            "type": "text",
            "description": {
                "en": "IMAP Server",
                "cs": "IMAP Server"
            },
            "defval": "",
            "required": true,
            "category": "Other"
        },
        "ABRAFLEXI_STORAGE": {
            "type": "text",
            "description": {
                "en": "Default storage for new items",
                "cs": "Výchozí sklad pro nové položky"
            },
            "defval": "SKLAD",
            "required": false,
            "category": "API"
        },
        "ABRAFLEXI_DOCTYPE": {
            "type": "string",
            "description": {
                "en": "code of the type of invoices received",
                "cs": "kód typu přijatých faktur"
            },
            "defval": "FAKTURA",
            "required": true,
            "category": "API"
        },
        "DONE_FOLDER": {
            "type": "text",
            "description": {
                "en": "Move Mails with imported invoices here",
                "cs": "Přesuň e-maily s importovanými fakturami sem"
            },
            "defval": "ImportedInvoices",
            "required": true,
            "category": "Other"
        },
        "RESULT_FILE": {
            "type": "file-path",
            "description": {
                "en": "File with result of import",
                "cs": "Soubor s výsledkem importu"
            },
            "defval": "result.txt",
            "required": false,
            "category": "Other"
        },
        "EASE_LOGGER": {
            "type": "string",
            "description": {
                "en": "Logging target: syslog|console",
                "cs": "Cíl logování: syslog|console"
            },
            "defval": "imap2abraflexi.log",
            "required": false,
            "category": "Behavior"
        }
    },
    "exitCodes": {
        "0": {
            "description": {
                "en": "Success",
                "cs": "Úspěch"
            },
            "severity": "success",
            "retry": false
        },
        "1": {
            "description": {
                "en": "General error",
                "cs": "Obecná chyba"
            },
            "severity": "error",
            "retry": true
        }
    }
}
